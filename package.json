{
  "name": "kimi-assistant",
  "version": "2.0.0",
  "description": "Assistente sempre vis√≠vel - Modernizado com Vite + React",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run web:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build && electron-builder",
    "web:dev": "vite",
    "web:build": "vite build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "framer-motion": "^12.33.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.kimi.assistant",
    "productName": "Kimi Assistant",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
